{
    "compilerOptions": {
        "outDir": "./lib",
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es6"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
